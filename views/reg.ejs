		<!-- 注册页面-->
		<div class="col-md-4 center-block reg">
			<form class="form-horizontal" role="form" method="post">
				<input type="hidden" name="check" id="check" value="0"/>
				<div class="form-group">
					<label for="username" class="control-label label-username label-reg">用户名</label>
					<div class="col-sm-10">
						<input type="text" class="form-control ipt-reg" name="username" id="username"/>
					</div>
				</div>
				<div class="form-group">
					<label for="password" class="control-label label-pw label-reg">密码</label>
					<div class="col-sm-10">
						<input type="password" class="form-control ipt-reg" name="password" id="password"/>
					</div>
				</div>
				<div class="form-group">
					<label for="reapt-pw" class="ontrol-label label-reaptpw label-reg">确认密码</label>
					<div class="col-sm-10">
						<input type="password" class="form-control ipt-reg" name="password-reapt" id="reapt-pw" />
					</div>
				</div>
				<div class="form-group">
					<label for="email" class="control-label label-email label-reg">邮箱</label>
					<div class="col-sm-10">
						<input type="text" class="form-control ipt-reg" name="email" id="email" />
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-offset-4 col-sm-10">
						<input type="button" class="btn btn-default reg-btn" value="完成注册" />
					</div>
				</div>
			</form>
		</div>
		<span><%= errors %></span>>
	</body>
	<script type="text/javascript" src="/plugin/jquery-3.1.1.min.js"></script>
